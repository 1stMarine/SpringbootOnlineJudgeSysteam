<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace对应mapper接口所在的位置-->
<mapper namespace="com.ckw.question.mapper.RecordMapper">

    <insert id="addRecord" parameterType="com.ckw.judger.pojo.SubmitRecord">
        insert into oj_submit_record values (
                                             #{id},
                                             #{uid},
                                             #{qid},
                                             #{questionName},
                                             #{time},
                                             #{memory},
                                             #{language},
                                             #{code},
                                             #{submitTime},
                                             #{title},
                                             #{message},
                                             #{testSample},
                                             #{userName}
                                            )
    </insert>
    <insert id="addMatchRecord" parameterType="com.ckw.judger.pojo.SubmitRecord">
        insert into oj_match_record values (
                                                #{param1.id},
                                                #{param1.uid},
                                                #{param1.qid},
                                                #{param2},
                                                #{param1.questionName},
                                                #{param1.time},
                                                #{param1.memory},
                                                #{param1.language},
                                                #{param1.code},
                                                #{param1.submitTime},
                                                #{param1.title},
                                                #{param1.message},
                                                #{param1.testSample},
                                                #{param1.userName}
                                            )
    </insert>
    <select id="getSubmitRecordList" resultType="com.ckw.judger.pojo.SubmitRecord">
        select * from oj_submit_record where uid = #{uid} and qid = #{qid} order by id desc limit #{page},10
    </select>


    <select id="getSubmitRecordListWithQid" resultType="com.ckw.judger.pojo.SubmitRecord">
        select * from oj_submit_record where  qid = #{qid}  order by id desc limit #{page},10
    </select>

    <select id="getSubmitRecordListWithUid" resultType="com.ckw.judger.pojo.SubmitRecord">
        select * from oj_submit_record where  uid = #{uid}  order by id desc limit #{page},10
    </select>

    <select id="getSubmitRecordCode" resultType="string">
        select code from oj_submit_record
    </select>

    <select id="getAllSubmitRecordList" resultType="com.ckw.judger.pojo.SubmitRecord">
        select * from oj_submit_record
    </select>
<!--得到竞赛-->
    <select id="getAllMatchSubmitRecordOnlyAC" resultType="com.ckw.judger.pojo.SubmitRecord">
        select * from oj_match_record where mid = #{mid} and title like 'Accept'
    </select>
    <select id="getAllMatchSubmitRecordNoLimit" resultType="com.ckw.judger.pojo.SubmitRecord">
        select * from oj_match_record where mid = #{mid}
    </select>
<!--    拿到用户的比赛分数-->
    <select id="getUserMatchResult" resultType="com.ckw.question.pojo.MatchResult">
        select * from oj_match_result where mid =  #{param1} and uid = #{param2}
    </select>
<!--    //    更新比赛分数-->
    <update id="updateUserMatchResult">
        update oj_match_result set
                                   results = #{results},
                                   total_score = #{totalScore}
        where
            mid = #{mid} and uid = #{uid}
    </update>

    <insert id="addUserMatchResult" parameterType="com.ckw.question.pojo.MatchResult">
        insert into oj_match_result values (
                                            #{id},
                                            #{mid},
                                            #{uid},
                                            #{userName},
                                            #{results},
                                            #{totalScore}
                                           )
    </insert>

    <select id="getMatchResult" resultType="com.ckw.question.pojo.MatchResult">
        select * from oj_match_result where mid = #{mid} order by total_score desc
    </select>
</mapper>